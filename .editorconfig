root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = false

[*.{cpp,hpp}]
indent_style = space
indent_size = 4

[config.*]
insert_final_newline = true

[{*.py,configure}]
indent_style = space
indent_size = 4
insert_final_newline = true

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[{Makefile,*.mk}]
indent_style = tab
indent_size = 4